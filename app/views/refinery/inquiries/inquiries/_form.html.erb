<%= form_for [refinery, :inquiries, @inquiry],
            url: refinery.url_for(@page.url),
            data: { remote: true, type: 'json' } do |f| %>
  <%= render partial: '/refinery/admin/error_messages',
             locals: {
               object: @inquiry,
               include_object_name: true
             } %>
  <div class="field">
    <%= f.required_label :name, class: 'placeholder-fallback' %>
    <%= f.text_field :name, class: 'text', required: true,
                  placeholder: (t('name', scope: 'activerecord.attributes.refinery/inquiries/inquiry') if Refinery::Inquiries.show_placeholders) %>
  </div>
  <div class="field">
    <%= f.required_label :email, class: 'placeholder-fallback' %>
    <%= f.email_field :email, class: 'text email', required: true,
                  placeholder: (t('email', scope: 'activerecord.attributes.refinery/inquiries/inquiry') if Refinery::Inquiries.show_placeholders) %>
  </div>

<% if Refinery::Inquiries.show_phone_number_field %>
  <div class="field">
    <%= f.label :phone, class: 'placeholder-fallback' %>
    <%= f.text_field :phone, class: 'text phone',
                  placeholder: (t('phone', scope: 'activerecord.attributes.refinery/inquiries/inquiry') if Refinery::Inquiries.show_placeholders) %>
  </div>
<% end %>

  <div class="field message_field">
    <%= f.required_label :message, class: 'placeholder-fallback' %>
    <%= f.text_area :message, rows: 8, required: true,
                placeholder: (t('message', scope: 'activerecord.attributes.refinery/inquiries/inquiry') if Refinery::Inquiries.show_placeholders) %>
  </div>
  <% privacy_policy_page = if Refinery::Inquiries.show_contact_privacy_link &&
                                Refinery::Plugins['inquiries'].privacy_policy_page.present?
                              Refinery::Plugins['inquiries'].privacy_policy_page
                            end -%>
  <div class="actions">
    <%= hidden_field_tag :form_holder_id, @form_holder_config[:id] if @form_holder_config.present? %>
    <%= f.submit t('.send'), data: { disable_with: t('.sending_please_wait') } %>
    <%= link_to t('.privacy_policy'), refinery.url_for(privacy_policy_page.url), id: 'privacy_link' if privacy_policy_page %>
  </div>
<% end %>
